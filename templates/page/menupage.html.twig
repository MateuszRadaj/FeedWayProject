{% extends "base.html.twig" %}

{% block body %}

<div class="row menu-container">
        <div class="col-xl-2 col-md-3 sticky-top float-start meal-menu ">
        <ul>
            <li>
                <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                    Pizza
                </a>
            </li>
    
            <li>
                <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                    Burgery
                </a>
            </li>
    
            <li>
                <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                    Dodatki
                </a>
            </li>
    
            <li>
                <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                    Napoje
                </a>
            </li>
        </ul>
    </div>

    <div class="col-xl-10 col-md-9 product-container">
        <div class="row">
            <div class="float-start meal-description">
                <div class="ms-2 category-name"> Pizza </div>
                <div class="ms-2 category-sizes">
                    Dostępna w rozmiarach: MAŁA 28 cm / ŚREDNIA 34 cm / DUŻA 40 cm
                </div>
            </div>
    
            {% for product in products %}
                <div class="col-md-10 col-xl-5 float-start meal-wrapper">
                    <div class="meal-info">
                        <div class="py-3 text-uppercase">
                            {{ product.name }}
                        </div>
                        <div class="text-lowercase">
                            {{ product.ingredients }}
                        </div>
                        <div class="py-4 text-uppercase">
                            25,00
                        </div>
                    </div>
    
                    <div class="pt-3 meal-image-container">
                        <img src="{{ asset('assets/images/index.jpeg') }}" class="meal-image" alt="image not found" width="160">
                    </div>
                    
                    <div class="meal-addbutton">
                        <a href="">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="addbutton">
                                <path d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
